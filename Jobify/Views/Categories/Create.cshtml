@model Jobify.Models.Category

@{
    ViewBag.Title = "Create New Category"; // Updated title for clarity
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<style>
    /* General body font and background - consistent with other views */
    body {
        font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
        background-color: #f0f2f5; /* A softer, light-grey background */
    }

    .container {
        max-width: 800px; /* Adjust max-width for content */
        margin-top: 50px;
        margin-bottom: 50px;
    }

    /* Enhanced Form Card Styling */
    .details-card { /* Using .details-card for consistency */
        background-color: #ffffff;
        border-radius: 12px;
        padding: 2.5rem; /* Increased padding */
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1); /* Softer, more pronounced shadow */
        border: 1px solid #e0e0e0; /* Subtle border */
    }

    /* Gradient Header Styling */
    .gradient-header {
        background: #4A90E2; /* Blue/Purple gradient */
        color: white;
        padding: 1.5rem;
        border-radius: 8px; /* Slightly less rounded than card to differentiate */
        margin-top: -2.5rem; /* Pull up to overlap with card top */
        margin-left: -2.5rem;
        margin-right: -2.5rem;
        margin-bottom: 2.5rem; /* Increased bottom margin */
        text-align: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15); /* Shadow for the header */
    }

        .gradient-header h3 {
            font-size: 1.8rem;
            font-weight: 700;
            letter-spacing: 0.5px;
            margin-bottom: 0;
        }

    /* Form Group Styling */
    .form-group-custom { /* Custom class for form groups to control spacing and layout */
        margin-bottom: 1.5rem; /* Space between form fields */
    }

        .form-group-custom label {
            display: block; /* Ensure label is on its own line */
            font-weight: 600;
            color: #333;
            margin-bottom: 0.5rem; /* Space between label and input */
        }

    /* Input Styling */
    .form-control {
        width: 100%;
        padding: 0.75rem 1rem; /* Generous padding for input fields */
        font-size: 1rem;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        border-radius: 0.375rem; /* Standard Bootstrap border-radius */
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .form-control:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    /* Action Buttons Styling - consistent with other views */
    .action-buttons {
        margin-top: 2.5rem; /* Increased top margin */
        display: flex;
        justify-content: space-between; /* Spacing between buttons */
        gap: 15px; /* Space between buttons */
        flex-wrap: wrap; /* Allow buttons to wrap on smaller screens */
    }

    /* General Button Styling - consistent with other views */
    .btn-action {
        border: none;
        border-radius: 8px;
        padding: 0.75rem 1.8rem; /* Generous padding */
        font-size: 1rem;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-decoration: none; /* Remove underline for links acting as buttons */
        display: inline-flex; /* Align icon and text */
        align-items: center;
        justify-content: center;
    }

    .btn-create { /* Reusing .btn-create for consistency */
        background: #4A90E2; /* Blue/Purple gradient for Create button */
        color: white;
    }

        .btn-create:hover {
            background: #fff; /* White background on hover */
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
            color: #4A90E2; /* Text color changes to blue on hover */
            border: 1px solid #4A90E2; /* Add a border matching the hover text color */
        }

        .btn-create:active {
            transform: translateY(0);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

    .btn-back { /* Reusing .btn-back for consistency */
        background-color: #fff; /* Light grey background for Back button */
        color: #4A90E2;
        border: 1px solid #ccc; /* Border color from your details page */
    }

        .btn-back:hover {
            background-color: #4A90E2;
            border-color: #4A90E2; /* Change border color on hover */
            color: #fff;
            transform: translateY(-1px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.08); /* Lighter shadow for back button */
        }

        .btn-back:active {
            transform: translateY(0);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

    /* Icon within button */
    .btn-action i {
        margin-right: 8px;
    }

    /* Responsive adjustments */
    @@media (max-width: 767px) {
        .action-buttons {
            flex-direction: column; /* Stack buttons vertically */
            gap: 10px; /* Space between stacked buttons */
        }

        .btn-action {
            width: 100%; /* Full width buttons */
        }
    }
</style>

<div class="container">
    <div class="details-card">
        <div class="gradient-header">
            <h3 class="mb-0">
                <i class="fas fa-tags me-2"></i> Create New Category
            </h3>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group-custom">
                @Html.LabelFor(model => model.CategoryName)
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>

            <div class="action-buttons">
                <button type="submit" value="Create" class="btn-action btn-create">
                    <i class="fas fa-plus"></i> Create Category
                </button>
                <a href="@Url.Action("Index")" class="btn-action btn-back">
                    <i class="fas fa-list"></i> Back to List
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}