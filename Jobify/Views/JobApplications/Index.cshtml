@model IEnumerable<Jobify.Models.JobApplication>

@{
    ViewBag.Title = "Job Applications";
   
}

<style>
    /* General body and container styling */
    body {
        background-color: #f8f9fa;
    }

    .container {
        max-width: 1200px;
        margin-top: 20px;
    }

    /* Card styling */
    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .card-header {
        background-color: #fff;
        border-bottom: 1px solid #dee2e6;
        padding: 1rem 1.5rem;
    }

    /* Table styling */
    .table {
        margin-bottom: 0;
        /* Ensure content wraps if necessary */
        table-layout: auto; /* Allow column widths to adjust to content naturally */
        width: 100%; /* Ensure table takes full width of its container */
    }

        .table thead th {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            color: #6c757d;
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            white-space: nowrap; /* Prevent header text from wrapping */
        }

        .table tbody td {
            padding: 0.75rem 1.5rem;
            vertical-align: middle;
            word-wrap: break-word; /* Allow long words to break and wrap */
        }

        .table tbody tr {
            border-bottom: 1px solid #e9ecef;
        }

    /* Action icons styling */
    .action-icons {
        white-space: nowrap; /* Keep action icons on one line */
    }

        .action-icons a, .action-icons button {
            color: #6c757d;
            margin-right: 10px;
            background: none;
            border: none;
            cursor: pointer;
            font-size: 1.1rem;
            display: inline-flex; /* Use flex for alignment and spacing */
            align-items: center;
            justify-content: center;
            padding: 0; /* Remove default button padding */
        }

            .action-icons a:last-child, .action-icons button:last-child {
                margin-right: 0;
            }

    /* Add new button styling */
    .add-new-button {
        background-color: #4A90E2;
        border-color: #5d78ff;
        color: white;
        font-size: 0.875rem;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
    }

    /* Modal specific styling (from redesign) */
    #deleteModal .modal-content {
        border-radius: 10px;
        border: none;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    #deleteModal .modal-header {
        border-bottom: none;
        padding: 2rem;
        justify-content: center;
    }

        #deleteModal .modal-header div {
            background-color: #f2dede;
            color: #a94442;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 1rem;
        }

    #deleteModal .modal-body {
        padding: 0 2rem 1.5rem;
        text-align: center;
    }

    #deleteModal .modal-title {
        color: #333;
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    #deleteModal .modal-body p {
        color: #777;
        font-size: 1rem;
        margin-bottom: 1rem;
    }

    #deleteModal .modal-footer {
        border-top: none;
        padding: 1rem 2rem 2rem;
        justify-content: center;
    }

        #deleteModal .modal-footer .btn-secondary {
            color: #333;
            background-color: #f8f9fa;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 0.75rem 1.5rem;
            margin-right: 0.5rem;
        }

        #deleteModal .modal-footer .btn-danger {
            color: white;
            background-color: #dc3545;
            border: none;
            border-radius: 5px;
            padding: 0.75rem 1.5rem;
            margin-left: 0.5rem;
        }
</style>

<div class="container mt-5">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Job Applications</h2>
            <button class="btn add-new-button" onclick="location.href='@Url.Action("Create", "JobApplications")'">Create New</button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                @* Added table-responsive div *@
                <table class="table table-striped table-bordered text-center m-0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Skills)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CoverLetter)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ResumeLink)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AppliedAt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.JobPost.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.JobSeeker.Gender)
                            </th>
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Skills)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CoverLetter)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ResumeLink)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AppliedAt)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.JobPost.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.JobSeeker.Gender)
                                </td>
                                <td class="action-icons">
                                    <a href="@Url.Action("Edit", new { id=item.ApplicationId })" title="Edit"><i class="fas fa-edit text-primary"></i></a>
                                    <a href="@Url.Action("Details", new { id=item.ApplicationId })" title="Details"><i class="fas fa-info-circle text-info"></i></a>
                                    <button class="text-danger" title="Delete"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal"
                                            data-applicationid="@item.ApplicationId"
                                            data-applicantname="@item.FullName">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>  @* End of table-responsive div *@
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div>
                    <i class="fas fa-exclamation-triangle" style="font-size: 1.5rem;"></i>
                </div>
            </div>
            <div class="modal-body">
                <h5 class="modal-title" id="deleteModalLabel">Delete Job Application</h5>
                <p>Are you sure you want to delete the application by "<strong id="applicantNameToDelete"></strong>"?<br>This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" action="@Url.Action("Delete", "JobApplications")" style="display: inline-block;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="applicationIdToDelete" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> @* Font Awesome for icons *@

<script>
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget; // Button that triggered the modal
        var applicationId = button.getAttribute('data-applicationid'); // Extract info from data-applicationid attribute
        var applicantName = button.getAttribute('data-applicantname'); // Extract info from data-applicantname attribute

        // Get the elements in the modal
        var modalApplicantName = deleteModal.querySelector('#applicantNameToDelete');
        var modalApplicationIdInput = deleteModal.querySelector('#applicationIdToDelete');

        // Update the modal's content
        modalApplicantName.textContent = applicantName;
        modalApplicationIdInput.value = applicationId;

        // Log to console for debugging
        console.log('Modal opened for Application ID:', applicationId, 'Applicant Name:', applicantName);
    });

    // Optional: Add an event listener for form submission to see if it's triggered
    document.getElementById('deleteForm').addEventListener('submit', function (event) {
        console.log('Delete form submitted for Application ID:', document.getElementById('applicationIdToDelete').value);
    });
</script>